            <h2>Flights Info</h2>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.FlightNumber)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FlightNumber)
                </dd>
                <br />
                <dt>
                    @Html.DisplayNameFor(model => model.AirLine)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AirLine)
                </dd>
                <br />
                <dt>
                    @Html.DisplayNameFor(model => model.Terminal)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Terminal)
                </dd>
                <br />
                <dt>
                    @Html.DisplayNameFor(model => model.DestinationFlight)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DestinationFlight)
                </dd>
                <br />
                <dt>
                    @Html.DisplayNameFor(model => model.OriginFlight)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.OriginFlight)
                </dd>
                <br />
                <dt>
                    @Html.DisplayNameFor(model => model.DepDateFlight)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DepDateFlight)
                </dd>
