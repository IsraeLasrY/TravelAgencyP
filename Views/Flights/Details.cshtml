                </dt>
                <br />
                <dd>
                    @Html.DisplayFor(model => model.Rating)
                </dd>
                <br />
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.FlightNumber }, new { @class = "myActionLink" })
                    @Html.ActionLink("Back to List", "AdminHP", new { }, new { @class = "myActionLink" })
                </div>


            }
        </div>
    </strong>
</body>
</html>
