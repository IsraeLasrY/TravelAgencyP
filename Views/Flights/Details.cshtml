@model TravelAgencyP.Models.FlightsInfo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Details Flight From DB</title>
    <link href="~/Css/AdminCss/AdminPageCss.css" rel="stylesheet" />
