@model IEnumerable<TravelAgencyP.Models.FlightsInfo>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css" />
    <link href="~/Css/SearchCss/SearchFlights.css" rel="stylesheet" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Travel Agency</title>
    <link href="~/Css/HomeCss/Homecss.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <div class="topnav">
        <a class="active" href="/HomeTravel/HomePage">Home</a>
        <a href="/HomeTravel/FindFlight">Find Flight</a>
        <a href="/HomeTravel/LoginAdmin" onclick="document.getElementById('id01').style.display='block'" style="width:auto;">Login AdmiN</a>
        <a href="/HomeTravel/AboutUs">AbouTUs</a>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 card-margin">

        </div>
        <div class="home">
            <div class="col-12">
                <div class="card card-margin">
                    <div class="card-body">
                        <div class="row search-body">
                            <div class="col-lg-12">
                                <div class="search-result">
                                    <div class="result-header">
                                        <div class="resp-tabs-container">
                                            <div class="tab-1 resp-tab-content roundtrip">
                                                <div class="result-body">
                                                    <div class="table-responsive">
                                                        <table class="table widget-26">
                                                            <tbody>
                                                                @foreach (var item in Model)
                                                                {
                                                                <tr>
                                                                    <td>
                                                                        <input type="hidden" name="FlightNum" value=@Html.ValueForModel(item.FlightNumber) />
                                                                        <div class="widget-26-job-emp-img">
                                                                            <p class="type m-0">@Html.DisplayFor(modelItem => item.FlightNumber)</p>
                                                                        </div>
                                                                    </td>
                                                                    <td>
                                                                        <div class="widget-26-job-title">
                                                                            <p class="type m-0">@Html.DisplayFor(modelItem => item.OriginF) To @Html.DisplayFor(modelItem => item.DestinationF)</p>
                                                                        </div>
                                                                    </td>
                                                                    <td>
                                                                        @{
                                                                            var depDateF = item.DepDateF.ToShortDateString();
                                                                        }
                                                                        <div class="widget-26-job-info">
                                                                            <p class="type m-0">Date : @Html.DisplayFor(modelItem => depDateF)</p>
                                                                        </div>
                                                                    </td>
                                                                    <td>
                                                                        @{
                                                                            var depT = item.DepT.ToString(@"hh\:mm");
                                                                        }
                                                                        <div class="widget-26-job-info">
                                                                            <p class="type m-0">Departure Time : @Html.DisplayFor(modelItem => depT)</p>
                                                                        </div>
                                                                    </td>
                                                                    <td>
                                                                        @{
                                                                            var landT = item.LandT.ToString(@"hh\:mm");
                                                                        }
                                                                        <div class="widget-26-job-info">
                                                                            <p class="type m-0">Landing Time : @Html.DisplayFor(modelItem => landT)</p>
                                                                        </div>
                                                                    </td>
                                                                    <td>
                                                                        <div class="widget-26-job-salary">@Html.DisplayFor(modelItem => item.PriceTicket)$ </div>
                                                                    </td>
                                                                    <td>
                                                                        <div class="widget-26-job-category bg-soft-base">
                                                                            <i class="indicator bg-base"></i>
                                                                            <span>@Html.DisplayFor(modelItem => item.AirLine)- @Html.DisplayFor(modelItem => item.Terminal)</span>
                                                                        </div>
                                                                    </td>
                                                                    <td>
                                                                        <div class="widget-26-job-salary">Seats left : @Html.DisplayFor(modelItem => item.Seats) </div>
                                                                    </td>
                                                                </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</body>
</html>
